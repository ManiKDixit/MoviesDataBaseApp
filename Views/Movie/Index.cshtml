@{
}
<div class="album py-5 bg-light">
    <div class="container">
        <h1 style="color : greenyellow">Top Suggestions for you to Watch </h1>
       
            <a asp-controller="Movie" asp-action="Create" style="color:white" class="btn btn-sm btn-outline-secondary">Add a Movie</a>
        
        <br>
        <br>
        <div class="row">
            
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="100%" height="555" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Movie" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">View</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a asp-controller="Movie" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" class="btn btn-sm btn-outline-secondary">Edit</a>

                                        <a asp-controller="Movie" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" class="btn btn-sm btn-outline-secondary">Delete</a>
                                        
                                    }
                                </div>
                                <small class="text-muted">@item.Genre</small>
                            </div>
                        </div>
                    </div>
                </div>

            }


        </div>
    </div>
</div>


