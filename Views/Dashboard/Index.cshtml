@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager

@model MoviesDataBaseApp.ViewModels.DashboardViewModel

<h1 class="display-4 fw-normal">User Dashboard</h1>
<h4 class="display-5 fw-normal">Add Your Recommendation for others </h4>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Movie" asp-action="Create">Add Recommendation </a>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Dashboard" asp-action="EditUserProfile">Edit User Profile</a>
<div class="album py-5 bg-light">
    <div class="container">
        <h6 class="display-6 fw-normal">Your Recommended Movies</h6>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var item in Model.Movies)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.Description</p>
                           @*  <p class="card-text">@item.Genre</p>
                            <p class="card-text">@item.Director</p>
                            <p class="card-text">@item.Award</p>
                            <p class="card-text">@item.Language</p>
                            <p class="card-text">@item.Studios</p>
                            <p class="card-text">@item.ReleaseDate</p> *@
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Movie" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a asp-controller="Movie" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" class="btn btn-sm btn-outline-secondary">Edit</a>

                                        <a asp-controller="Movie" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" class="btn btn-sm btn-outline-secondary">Delete</a>

                                    }


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            
            }

        </div>
    
    </div>
</div>